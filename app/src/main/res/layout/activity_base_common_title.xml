<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_common_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_common_status"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:id="@+id/rl_common_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/iv_common_back"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/back_icon" />

        <LinearLayout
            android:id="@+id/ll_title"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_common_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="18dp"
                tools:text="标题"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_common_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_common_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="3dp"
            tools:text="右侧文字"
            android:textColor="#333333"
            android:textSize="15dp" />

    </RelativeLayout>

    <View
        android:id="@+id/view_title_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ebecf1"
        android:visibility="gone" />

</LinearLayout>